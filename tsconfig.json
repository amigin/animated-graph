{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "wwwroot/js",
    "baseUrl": ". ",
    "paths": {
      "socket.io-client": [
        "./node_modules/socket.io-client/dist/*.js"
      ],
      "/lib": [
        "./wwwroot/lib"
      ]
    },
    "moduleResolution": "Node"
  },
  "include": [
    "TypeScript/**/*"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}